<UserControl x:Class="LMS.ViewModels.CommonHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LMS.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" Height="99">
    <StackPanel HorizontalAlignment="Center" Height="Auto" Width="639" Margin="30,0,30,0" VerticalAlignment="Center" Orientation="Horizontal">
        <ComboBox Width="100" Margin="5,0,5,0" VerticalAlignment="Center"/>
        <TextBox Width="150" Margin="5,0,5,0" VerticalAlignment="Center" ToolTip="검색어를 입력하세요"/>
        <Button Content="검색" Width="50" Margin="5,0,10,0" VerticalAlignment="Center"/>
        <Button Content="추가" Width="50" Margin="10,0,10,0" VerticalAlignment="Center"/>
        <Button Content="수정" Width="50" Margin="10,0,10,0" VerticalAlignment="Center"/>
        <Button Content="삭제" Width="50" Margin="10,0,10,0" VerticalAlignment="Center"/>
    </StackPanel>

</UserControl>
